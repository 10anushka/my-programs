# include <iostream>
using namespace std;

int main()
{
    char N;
    float num1, num2;

    cout << "Enter operator either + or - or * or /: ";
    cin >> N;

    cout << "Enter two numbers: ";
    cin >> num1 >> num2;

    switch(N)
    {
        case '+':
            cout << num1+num2;
            break;

        case '-':
            cout << num1-num2;
            break;

        case '*':
            cout << num1*num2;
            break;

        case '/':
            cout << num1/num2;
            break;

        default:
            
            cout << "Error! ";
            break;
    }

    return 0;
}
